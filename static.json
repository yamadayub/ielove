{
    "root": "dist",
    "clean_urls": true,
    "routes": {
        "/**": "index.html"
    },
    "https_only": true,
    "headers": {
        "/**": {
            "Strict-Transport-Security": "max-age=31557600",
            "X-Frame-Options": "DENY",
            "X-Content-Type-Options": "nosniff",
            "Content-Security-Policy": "default-src 'self'; connect-src 'self' https://*.herokuapp.com https://*.clerk.dev; img-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.clerk.dev; style-src 'self' 'unsafe-inline';",
            "Cache-Control": "no-cache, no-store, must-revalidate"
        },
        "/**/*.js": {
            "Content-Type": "application/javascript; charset=utf-8"
        },
        "/**/*.mjs": {
            "Content-Type": "application/javascript; charset=utf-8"
        },
        "/**/*.css": {
            "Content-Type": "text/css; charset=utf-8"
        }
    }
}